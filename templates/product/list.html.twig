
{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} BD {% endblock %}


{% block body %}

    <style>

        table {
            border-collapse: collapse;
            width: 100%;
            border-top: 1px solid #000;
            border-left: 1px solid #000;
            border-right: 1px solid #000;
            margin-bottom: 5px;
        }

        tr:hover {background-color:#f5f5f5;}

        td, th {
            border-bottom: 1px solid #000;
            text-align: center;
            padding: 5px;
        }

        td{
            width: 10%;
        }
        th{
            width: 3%;
        }

    </style>

    <h1 style="text-align: center">Products</h1>

    {% for product in product %}

        <table>
            <tr>
                <th>ID of the product</th>
                <th>User</th>
                <th>Name of the product</th>
                <th>Price</th>
                <th>Description</th>
                <th colspan="2">Operations</th>
            </tr>
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.usuario.name }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>

                <td><a style="
        display: inline-block;
        background-color: #4caf509c;
        color: black;
        padding: 14px 25px;
        text-align: center;
        text-decoration: none;"
                       href = "{{ path('modify_product', {'id':product.id}) }}" >Modify product</a>
                </td>
                <td>
                    <a style="
        display: inline-block;
        background-color: #ff5722a6;
        color: black;
        padding: 14px 25px;
        text-align: center;
        text-decoration: none;"
                       href = "{{ path('deleteProducts', {'id':product.id} ) }}" >Delete product</a>
                </td>

            </tr>
        </table>

    {% endfor %}

    <a style="
        display: inline-block;
        background-color: gainsboro;
        color: black;
        margin: 1em;
        padding: 14px 25px;
        text-align: center;
        text-decoration: none;" href = "{{ path('product') }}"  >Return</a>

{% endblock %}

