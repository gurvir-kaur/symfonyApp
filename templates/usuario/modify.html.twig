
{% extends 'base.html.twig' %}

{% block title %} {{ parent() }}  {% endblock %}

{% block stylesheets %}
    <link href="{{ asset('main.css.twig') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <style>
        body{
            padding: 1em;
            margin-left: 1em;
        }
        a, #submit {
            display: inline-block;
            background-color: #F5F5F5;
            color: black;
            padding: 25px;
            text-align: center;
            text-decoration: none;
            margin-left: auto;
            margin-right: auto;
            margin: 5px;
        }
        a:hover{
            background-color: #e0e0e0;
        }


    </style>

    <h1>Write the new values for the user $id </h1>

    <form action="{{ path('modified_usuario',{'id':usuario.id} ) }}" method="post">

        User ID: <input type="number" name="id" value="{{ usuario.id }}">
        <br>
        <br>
        User name: <input type="text" name="name" value="{{ usuario.name }}">
        <br>
        <br>
        User's email: <input type="text" name="email" value="{{ usuario.email }}">
        <br>
        <br>
        User's password: <input type="text" name="password" value="{{ usuario.password }}">
        <br>
        <br>
        <input id="submit" type="submit" value="Submit">

        <a href = "{{ path('usuario') }}"  >Return</a>

    </form>
{% endblock %}

